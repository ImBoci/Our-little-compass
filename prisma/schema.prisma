generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Food {
  id          String   @id @default(cuid())
  name        String
  description String?
  category    String?
  image_url   String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Activity {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  location    String?
  type        String?
  image_url   String?
}

model Memory {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  date        DateTime @default(now())
  rating      Int
  note        String?
  image_url   String?
  user        String?
}

model PushSubscription {
  id        Int      @id @default(autoincrement())
  user      String   // Name of the person (e.g., "Dani" or "Viki")
  payload   String   // The subscription JSON string
  createdAt DateTime @default(now())
}

model AppNotification {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  sender    String
  createdAt DateTime @default(now())
}